// schema.prisma - Database Schema per MIDA Merch Store

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ====================================
// PRODOTTI
// ====================================
model Product {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  description String?  
  sizeGuide   String?  
  basePrice   Float
  launchPrice Float?
  isActive    Boolean  @default(true)
  
  colors      Json
  sizes       Json
  images      Json?
  
  hasInventory Boolean @default(false)
  orderItems  OrderItem[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([slug])
}


// ðŸ†• MODEL CODICI PROMOZIONALI
model PromoCode {
  id          String   @id @default(uuid())
  code        String   @unique // "PROMO10", "SCONTO5"
  
  discountType String  // "PERCENTAGE" o "FIXED"
  discountValue Float  // 10 (per 10%) o 5 (per â‚¬5)
  
  // Limiti e validitÃ 
  expiresAt   DateTime?
  maxUsesPerUser Int   @default(1) // Max 1 volta per email
  allowedEmails   String[] // Lista email autorizzate (vuoto = tutti)
  isActive    Boolean  @default(true)
  
  // Tracking utilizzi
  usedBy      PromoCodeUsage[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([code])
}

// ðŸ†• TRACKING USO CODICI (per limitare 1 per email)
model PromoCodeUsage {
  id          String   @id @default(uuid())
  
  promoCode   PromoCode @relation(fields: [promoCodeId], references: [id], onDelete: Cascade)
  promoCodeId String
  
  customerEmail String
  orderId     String?
  
  usedAt      DateTime @default(now())
  
  @@unique([promoCodeId, customerEmail]) // 1 codice = 1 volta per email
  @@index([customerEmail])
}

// ====================================
// ORDINI
// ====================================
model Order {
  id              String      @id @default(uuid())
  orderNumber     Int         @unique @default(autoincrement()) // #0001, #0002, etc.
  uniqueCode      String      @unique  // Codice univoco tipo MIDA-0001-A3F7

  batchId         String?
  batch           Batch?   @relation(fields: [batchId], references: [id])
  
  // Dati cliente
  customerEmail   String
  customerName    String?
  customerPhone   String?

  // Codice promo usato
  promoCode       String?  // es: "PROMO10"
  promoDiscount   Float    @default(0) // Sconto applicato dal codice
  
  // Calcoli
  subtotal        Float       // Totale prodotti
  discount        Float       @default(0) // Sconto applicato (es. 5%)
  total           Float       // Totale finale
  
  // Pagamento
  paymentMethod   String      // "paypal" o "revolut"
  paymentStatus   PaymentStatus @default(PENDING)
  paymentId       String?     // ID transazione PayPal/Revolut (da email)
  paidAt          DateTime?
  
  // Righe ordine
  items           OrderItem[]
  
  // Log
  notes           String?     // Note interne
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  
  @@index([customerEmail])
  @@index([paymentStatus])
  @@index([createdAt])
}

enum PaymentStatus {
  PENDING      // In attesa pagamento
  PAID         // Pagato e confermato
  DELIVERED    // Consegnato
  FAILED       // Pagamento fallito
  REFUNDED     // Rimborsato
}
// ====================================
// LOTTO
// ====================================

model Batch {
  id              String    @id @default(cuid())
  batchNumber     Int       @unique @default(autoincrement())
  createdAt       DateTime  @default(now())
  orderedAt       DateTime? // Quando inviato al fornitore
  receivedAt      DateTime? // Quando ricevuto dal fornitore
  status          String    @default("DRAFT") // DRAFT, ORDERED, RECEIVED
  
  // Info fornitore
  supplierName    String?
  supplierOrderId String?
  supplierCost    Float?
  expectedDelivery DateTime?
  notes           String?
  
  orders          Order[]
  
  @@map("batches")
}


// ====================================
// RIGHE ORDINE
// ====================================
model OrderItem {
  id          String   @id @default(uuid())
  
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId     String
  
  product     Product  @relation(fields: [productId], references: [id])
  productId   String
  
  // Dettagli articolo
  color       String   // "Military Green"
  size        String   // "M"
  quantity    Int      // 2
  unitPrice   Float    // 39.00 (prezzo al momento dell'ordine)
  lineTotal   Float    // quantity * unitPrice
  
  createdAt   DateTime @default(now())
  
  @@index([orderId])
}

// ====================================
// CONFIGURAZIONE SISTEMA
// ====================================
model Config {
  id            String   @id @default(uuid())
  key           String   @unique // "bundle_discount", "launch_active", etc.
  value         Json     // Valore dinamico
  description   String?
  updatedAt     DateTime @updatedAt
}

// ====================================
// LOG PAGAMENTI (per debug)
// ====================================
model PaymentLog {
  id            String   @id @default(uuid())
  orderId       String?
  source        String   // "gmail_parser", "manual", "webhook"
  rawData       Json     // Email completa o dati grezzi
  status        String   // "matched", "unmatched", "error"
  createdAt     DateTime @default(now())
  
  @@index([orderId])
  @@index([createdAt])
}