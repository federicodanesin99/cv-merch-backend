// schema.prisma - Database Schema per MIDA Merch Store

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ====================================
// PRODOTTI
// ====================================
model Product {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  category    String?
  description String?  
  sizeGuide   String?  
  basePrice   Float
  launchPrice Float?
  isActive    Boolean  @default(true)
  isComingSoon  Boolean   @default(false) 
  
  colors      Json
  sizes       Json
  images      Json?
  
  hasInventory Boolean @default(false)
  orderItems  OrderItem[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  interests     ProductInterest[]
  promotionGifts Promotion[] @relation("PromotionGifts")
  
  @@index([slug])
}


model ProductInterest {
  id              String    @id @default(cuid())
  productId       String
  userEmail       String
  userName        String
  preferredColor  String?
  preferredSize   String?
  notifiedAt      DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  product         Product   @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  @@unique([productId, userEmail])
  @@index([productId])
  @@index([userEmail])
}


// üÜï MODEL CODICI PROMOZIONALI
model PromoCode {
  id          String   @id @default(uuid())
  code        String   @unique // "PROMO10", "SCONTO5"
  
  discountType String  // "PERCENTAGE" o "FIXED"
  discountValue Float  // 10 (per 10%) o 5 (per ‚Ç¨5)
  
  // Limiti e validit√†
  expiresAt   DateTime?
  maxUsesPerUser Int   @default(1) // Max 1 volta per email
  allowedEmails   Json @default("[]") // Lista email autorizzate (vuoto = tutti)
  isActive    Boolean  @default(true)
  
  
  // Tracking utilizzi
  usedBy      PromoCodeUsage[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([code])
}

// üÜï TRACKING USO CODICI (per limitare 1 per email)
model PromoCodeUsage {
  id          String   @id @default(uuid())
  
  promoCode   PromoCode @relation(fields: [promoCodeId], references: [id], onDelete: Cascade)
  promoCodeId String
  
  customerEmail String
  orderId     String?
  
  usedAt      DateTime @default(now())
  
  @@unique([promoCodeId, customerEmail]) // 1 codice = 1 volta per email
  @@index([customerEmail])
}

// ====================================
// ORDINI
// ====================================
model Order {
  id              String      @id @default(uuid())
  orderNumber     Int         @unique @default(autoincrement()) // #0001, #0002, etc.
  uniqueCode      String      @unique  // Codice univoco tipo MIDA-0001-A3F7

  batchId         String?
  batch           Batch?   @relation(fields: [batchId], references: [id])
  
  // Dati cliente
  customerEmail   String
  customerName    String?
  customerPhone   String?

  // Codice promo usato
  promoCode       String?  // es: "PROMO10"
  promoDiscount   Float    @default(0) // Sconto applicato dal codice
  
  // Calcoli
  subtotal        Float       // Totale prodotti
  discount        Float       @default(0) // Sconto applicato (es. 5%)
  total           Float       // Totale finale
  
  // Pagamento
  paymentMethod   String      // "paypal" o "revolut"
  paymentStatus   PaymentStatus @default(PENDING)
  paymentId       String?     // ID transazione PayPal/Revolut (da email)
  paidAt          DateTime?
  
  // Righe ordine
  items           OrderItem[]
  
  // Log
  notes           String?     // Note interne
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  promotionUsages PromotionUsage[]
  appliedPromotions Json? // Array di {id, name, discount}
  
  @@index([customerEmail])
  @@index([paymentStatus])
  @@index([createdAt])
}

enum PaymentStatus {
  PENDING      // In attesa pagamento
  PAID         // Pagato e confermato
  ORDERED
  DELIVERED    // Consegnato
  FAILED       // Pagamento fallito
  REFUNDED     // Rimborsato
}
// ====================================
// LOTTO
// ====================================

model Batch {
  id              String    @id @default(cuid())
  batchNumber     Int       @unique @default(autoincrement())
  createdAt       DateTime  @default(now())
  orderedAt       DateTime? // Quando inviato al fornitore
  receivedAt      DateTime? // Quando ricevuto dal fornitore
  status          String    @default("DRAFT") // DRAFT, ORDERED, RECEIVED
  
  // Info fornitore
  supplierName    String?
  supplierOrderId String?
  supplierCost    Float?
  expectedDelivery DateTime?
  notes           String?
  
  orders          Order[]
  
  @@map("batches")
}


// ====================================
// RIGHE ORDINE
// ====================================
model OrderItem {
  id          String   @id @default(uuid())
  
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId     String
  
  product     Product  @relation(fields: [productId], references: [id])
  productId   String
  
  // Dettagli articolo
  color       String   // "Military Green"
  size        String   // "M"
  quantity    Int      // 2
  unitPrice   Float    // 39.00 (prezzo al momento dell'ordine)
  lineTotal   Float    // quantity * unitPrice
  
  createdAt   DateTime @default(now())
  
  @@index([orderId])
}

// ====================================
// CONFIGURAZIONE SISTEMA
// ====================================
model Config {
  id            String   @id @default(uuid())
  key           String   @unique // "bundle_discount", "launch_active", etc.
  value         Json     // Valore dinamico
  description   String?
  updatedAt     DateTime @updatedAt
}

// ====================================
// LOG PAGAMENTI (per debug)
// ====================================
model PaymentLog {
  id            String   @id @default(uuid())
  orderId       String?
  source        String   // "gmail_parser", "manual", "webhook"
  rawData       Json     // Email completa o dati grezzi
  status        String   // "matched", "unmatched", "error"
  createdAt     DateTime @default(now())
  
  @@index([orderId])
  @@index([createdAt])
}

model OAuthToken {
  id           String   @id @default(cuid())
  provider     String   @unique // "gmail"
  accessToken  String   @db.Text
  refreshToken String   @db.Text
  scope        String?
  tokenType    String?
  expiryDate   BigInt?
  updatedAt    DateTime @updatedAt
  createdAt    DateTime @default(now())
}

model Promotion {
  id          String   @id @default(uuid())
  name        String   // "Black Friday Bundle"
  slug        String   @unique
  description String?  @db.Text
  isActive    Boolean  @default(true)
  priority    Int      @default(0) // Per ordinare applicazione (pi√π alto = prima)
  
  // üé® Tipo promozione
  type        PromotionType
  
  // üí∞ Valori sconto
  discountValue Float?  // 10 (per 10% o 10‚Ç¨)
  discountTiers Json?   // Per sconti progressivi/cumulativi
  
  // üéØ Condizioni trigger (struttura JSON complessa)
  conditions  Json     // minQuantity, minCartValue, categories, etc.
  
  // üéÅ Regalo/BOGO
  giftProductId String? // Per free gift
  giftProduct   Product? @relation("PromotionGifts", fields: [giftProductId], references: [id])
  bogoConfig    Json?   // {buy: 2, get: 1, discountOnGet: 100}
  
  // üìÖ Validit√† temporale
  startDate   DateTime?
  endDate     DateTime?
  
  // üé® Display Frontend
  badgeText   String?  // "2+1 GRATIS"
  badgeColor  String?  @default("#FF0000")
  showProgressBar Boolean @default(false)
  progressBarText String? // "Aggiungi {remaining} prodotti per -15%"
  showPopup   Boolean @default(false)
  popupText   String?
  
  // üìä Limiti utilizzo
  maxUsesTotal Int?      // Max usi totali
  maxUsesPerUser Int?    // Max usi per utente
  usageCount  Int @default(0)
  usages      PromotionUsage[]
  
  // üîó Combinabilit√†
  combinesWith String[] // IDs altre promo combinabili
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([isActive])
  @@index([priority])
  @@index([slug])
}

model PromotionUsage {
  id          String   @id @default(uuid())
  promotionId String
  promotion   Promotion @relation(fields: [promotionId], references: [id], onDelete: Cascade)
  orderId     String
  order       Order    @relation(fields: [orderId], references: [id])
  customerEmail String
  discountApplied Float
  createdAt   DateTime @default(now())
  
  @@index([promotionId])
  @@index([customerEmail])
}

enum PromotionType {
  PERCENTAGE      // -10%
  FIXED           // -5‚Ç¨
  PRICE_FIXED     // Paga solo 15‚Ç¨
  FREE_SHIPPING   // Spedizione gratis
  FREE_GIFT       // Regalo omaggio
  BOGO            // Buy X Get Y
  TIERED          // Sconto progressivo/cumulativo
}
